#!/usr/bin/env bash
#MISE description="Setting up project"

echo ""
echo "ğŸœ Setting up project"
echo ""

# Only run hk install if not in a git worktree
if ! git worktree list | grep -q "$(pwd)"; then
	hk install
fi

bun install

mkdir -p node_modules/@opencode-ai
ln -sf "$(pwd)/.opencode/node_modules/@opencode-ai/plugin" node_modules/@opencode-ai/plugin 2>/dev/null || true

echo ""
echo "ğŸ‘ Done"
echo ""
